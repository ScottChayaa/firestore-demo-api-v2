# Server Configuration
PORT=8080
NODE_ENV=development
IMAGE_VERSION=0.0.1

# API Configuration
API_PREFIX=/api
CORS_ORIGIN=*

# Logging Configuration
LOG_LEVEL=debug
LOG_RESPONSE_BODY=true
MAX_RESPONSE_BODY_LENGTH=10000

# Firebase Configuration
FIREBASE_PROJECT_ID=
FIREBASE_WEB_API_KEY=
FIRESTORE_DATABASE_ID=

# Firebase Credentials (擇一使用)
# 方式 1: 文件路徑（本地開發 - 推薦）
# GOOGLE_CREDENTIALS_PATH=
# 方式 2: Base64 編碼（Cloud Run 部署）
GOOGLE_CREDENTIALS_BASE64=

ENABLE_FIRESTORE_WARMUP=true

# Pagination Configuration
DEFAULT_PAGE_LIMIT=20
MAX_PAGE_LIMIT=100

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=user@gmail.com
SMTP_PASSWORD=
SMTP_FROM_EMAIL=user@gmail.com
SMTP_FROM_NAME="Firestore Demo API"

# Rate Limiting
EMAIL_RATE_LIMIT_MINUTES=2
EMAIL_MAX_REQUESTS_PER_DAY=50

# Seed Data
SEED_MEMBERS_COUNT=10
SEED_ORDERS_COUNT=50
SEED_PRODUCTS_COUNT=5
